@model BaseDatos2crudFirebase.Models.ClienteFB

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h4> Crear Cliente </h4>

    </div>

    <div class="panel-body">
        <form action="@Url.Action("Crear", "Crud")" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" type="text" name="Nombre" />

            </div>

            <div class="form-group">
                <label>Tipo Cliente</label>
                <input class="form-control" type="text" name="TipoCliente" />

            </div>

            <div class="form-group">
                <label>Estado Civil</label>
                <input class="form-control" type="text" name="EstadoCivil" />

            </div>

            <div class="form-group">
                <label>Genero</label>
                <input class="form-control" type="text" name="Genero" />

            </div>

            <div class="form-group">
                <label>Direccion</label>
                <input class="form-control" type="text" name="Direcion" />

            </div>
            <button type="submit" class="btn btn-primary">Registrar cliente</button>

        </form>


    </div>

</div>

